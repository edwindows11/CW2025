<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.MainMenuController"
      prefWidth="600" prefHeight="600" styleClass="root">

    <javafx.scene.control.Label text="BEWARE OF SOUND" styleClass="warning-label"/>

    <Button text="Start Game" fx:id="startButton" onAction="#startButtonClicked" styleClass="menu-button"/>
    <Button text="Exit" fx:id="exitButton" onAction="#exitButtonClicked" styleClass="menu-button"/>

    <javafx.scene.control.Label text="Volume" styleClass="scoreClass"/>
    <javafx.scene.control.Slider fx:id="volumeSlider" min="0" max="100" value="100" maxWidth="200"/>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</VBox>
